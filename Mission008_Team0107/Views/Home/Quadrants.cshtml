    <div class="container">
        <div class="row">
            <div class="col-md-6 border">
                <!-- Quadrant 1 content -->
                @if (ViewBag.Tasks != null)
                {
                    var tasks = ((IEnumerable<dynamic>)ViewBag.Tasks).Where(task => task.QuadrantId == 1);
