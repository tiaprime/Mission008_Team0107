@model QuadrantsData

    <body>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <!-- Quadrant 1 content -->
                    <div class="card border-primary">
                        <div class="card-header bg-primary text-white">
                            <h4>Quadrant I - Important / Urgent</h4>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr class="fw-bold">
                                        <th>Task Name</th>
                                        <th>Due Date</th>
                                        <th>Category</th>
                                        <th>Completed?</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var task in Model.QuadrantOne)
                                    {
                                        <tr>
                                            <td>@task.TaskName</td>
                                            <td>@task.DueDate</td>
                                            <td>@task.Category.CategoryName</td>
                                            <td>@task.Completed</td>
                                            <td>
                                                <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                                            <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="DeleteTask" asp-route-id="@task.TaskId">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
