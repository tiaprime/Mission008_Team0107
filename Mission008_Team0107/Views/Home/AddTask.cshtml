@using Mission008_Team0107.Models
@model TaskObj

<h1>Add a New Task</h1>

<form method="post">

    <input type="hidden" asp-for="TaskId" />
    <br>
    <label asp-for="TaskName">Name (required):</label>
    <input asp-for="TaskName" required><br><br>

    <label asp-for="DueDate">Due Date:</label>
    <input asp-for="DueDate"><br><br>

    <select asp-for="QuadrantId" required> 
        <option value="">Select a Quadrant</option> 
         @foreach (Quadrant m in ViewBag.Quadrants) 
         { 
             <option value="@m.QuadrantId">@m.QuadrantName</option> 
        }
    </select><br><br>

    <select asp-for="CategoryId" required>
        <option value="">Select a Category</option>
        @foreach (Category m in ViewBag.Categories)
        {
            <option value="@m.CategoryId">@m.CategoryName</option>

        }
    </select><br><br>
   

    <label asp-for="Completed">Completed:</label>
    <select asp-for="Completed">
        <option value="" disabled selected></option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br><br>

    <button type="submit">Submit Task</button>


    
    <div asp-validation-summary="All"></div>
</form>

